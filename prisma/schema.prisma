generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  nickname     String   @unique
  profileUrl   String?
  refreshToken String?
  createdAt    DateTime @default(now())

  @@map("user")
}

model emailVerifies {
  email     String   @id
  code      String
  expiresAt DateTime

  @@map("email_verify")
}
